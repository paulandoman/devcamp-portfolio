<div class='app-card-container'>
  <div class='card'>
    <h1>Paul Anderson</h1>
    <hr>

    <div class='row'>
      <div class='col-md-4'>
        <%= image_tag 'surfing.png', width: 300, alt: 'Profile Image', class: 'profile-img' %>
      </div>

      <div class='col-md-8'>
        <p>I am a software engineer with a broad range of experience across software development, automation and testing.</p>
        <p>
          <button
            class='btn btn-primary'
            type='button'
            data-toggle='collapse'
            data-target='#jobHistory'
            aria-expanded='false'
            aria-controller='jobHistory'
          >
            Job History
          </button>

          <button
            class='btn btn-primary'
            type='button'
            data-toggle='collapse'
            data-target='#education'
            aria-expanded='false'
            aria-controller='education'
          >
            Education
          </button>

        </p>
        <p>
          <div class='collapse' id='jobHistory'>
            <div class='card card-block'>
              Job 1
            </div>
            <div class='card card-block'>
              Job 2
            </div>
          </div>
          <div class='collapse' id='education'>
            <div class='card card-block'>
              High School
            </div>
            <div class='card card-block'>
              University
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>

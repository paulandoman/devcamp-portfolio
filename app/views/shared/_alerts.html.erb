<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert],
                     title: "Paul Anderson's Portfolio",
                     sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error],
                     title: "Paul Anderson's Portfolio",
                     sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice],
                     title: "Paul Anderson's Portfolio",
                     sticky: false) %>
<% end %>